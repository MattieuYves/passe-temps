<div class="container-wrap">
    <div class="card-display-content scrollbar-custom width-60">
        <div class="d-flex force-overflow justify-content-center">
            <h1>Professeurs</h1>
        </div>
        <%= render "shared/searchbar" %>
        <div class="index-card">
            <% if @users.any? %>
                <% @users.each do |user| %>
                <%= render "shared/card", user: user %>
            <% end %>
            <% else %>
                <p>Aucun professeur trouv√©.</p>
            <% end %>
        </div>
    </div>
    <%# <div class="maps width-40"> %>
      <div class="maps " style="width: 30%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    <%# </div> %>
</div>

