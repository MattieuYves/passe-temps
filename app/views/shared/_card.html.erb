
<div class="card">
    <div class="top-part"></div>

    <div class="card-name">
        <h3><%=user.first_name %> <%=user.last_name %></h3> 
    </div>
    <div class="bottom-part">
        <% user.skills.each do |skill| %>
            <div class="details">
                <p><i class="fa-solid fa-certificate"></i> <%= skill&.name.capitalize %></p>
                <p><i class="fa-solid fa-business-time"></i> <%= skill&.experience_year  %> ans d'exp√©rience</p>
                <p><i class="fa-solid fa-star"></i> <%= rand(1..5).to_f %>/5</p>
            </div>
        <% end %>
    </div>
</div>