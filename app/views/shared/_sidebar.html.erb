<div class="sidebar position-relative">
  <% if current_user == nil  %>
    <div class="center-avatar d-none">
      <%= image_tag "avatar.png", class: "img_avatar" %>
    </div>
  <% else %>
    <div class="center-avatar">
      <%= image_tag "avatar.png", class: "img_avatar" %>
    </div>
  <% end %>

  <%= link_to dashboard_path, class: "wrapper-sidebar-item" do %>
    <i class="fa-regular fa-id-card"></i>
    <p class="side-item-name">Mon Espace</p>
  <% end %>

  <%= link_to dashboard_path, class: "wrapper-sidebar-item" do %>
    <i class="fa-solid fa-comment"></i>
    <p class="side-item-name">Messagerie</p>
  <% end %>

  <%= link_to dashboard_path, class: "wrapper-sidebar-item" do %>
    <i class="fa-solid fa-user"></i>
    <p class="side-item-name">Mon Compte</p>
  <% end %>

  <%= link_to dashboard_path, class: "wrapper-sidebar-item" do %>
    <i class="fa-solid fa-gear"></i>
    <p class="side-item-name">Paramètres</p>
  <% end %>

  <% if current_user == nil  %>
    <%= link_to new_user_session_path, class: 'wrapper-sidebar-item mt-auto' do %>
      <i class="fa-solid fa-right-to-bracket"></i>
      <p class="side-item-name">Se Connecter</p>
    <% end %>
  <% else %>
    <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: 'wrapper-sidebar-item mt-auto' do %>
      <i class="fa-solid fa-right-to-bracket"></i>
      <p class="side-item-name">Se Déconnecter</p>
    <% end %>
  <% end %>
</div>
