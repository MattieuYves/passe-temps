<div class="mx-auto search-by-category-container py-3">
  <div class="d-flex search-by-category-list justify-content-center">
    <% @skills.select("distinct category, icon").each do |skill| %>
      <div class="search-by-category-item">
        <%= link_to skills_path(category: skill.category), class: "d-flex flex-column align-items-center p-2 text-decoration-none" do %>
          <%# <i class="fa-regular fa-heart text-white pb-2"></i> %>
          <%= skill.icon %>
          <div class="category-name">
            <%= skill.category %>
          </div>
        <% end %>
        </a>
      </div>
    <% end %>
  </div>
</div>
