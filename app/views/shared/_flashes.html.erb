<% if notice %>
  <div class="flash flash-success alert alert-dismissible fade show" role="notice">
    <span class="me-3"><strong>Bravo ! </strong><%= notice %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>

<% if alert %>
  <div class="flash flash-danger alert alert-dismissible fade show m-1" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
  </div>
<% end %>
