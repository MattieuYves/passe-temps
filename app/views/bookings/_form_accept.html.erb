<%= simple_form_for [booking.skill, booking], method: :patch, data: { insert_in_list_target: "accept", action: "submit->insert-in-list#updateBooking" } do |f| %>
  <%= f.input :status, as: :hidden, input_html: { value: 'confirmed' }, wrapper: :inline_form %>
  <%= f.button :submit, 'Accept', class: "my-0 py-0 rounded-pill", style:"background-color:#0bb7bc", data: { bs_toggle: "modal", bs_target: "#animationAccept" } %>
  <%= render 'shared/animation_accept_modal' %>
<% end %>
