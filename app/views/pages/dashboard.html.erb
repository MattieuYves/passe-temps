<div data-controller="dashboard">
  <div class="d-flex gap-5 justify-content-evenly">
    <div class="dashboard-nav-student px-3 py-2 rounded-pill fs-5" data-action="click->dashboard#displayStudent" data-dashboard-target="btnStudent">
      Student
    </div>
    <div class="dashboard-nav-teacher px-3 py-2 rounded-pill fs-5" data-action="click->dashboard#displayTeacher" data-dashboard-target="btnTeacher">
      Teachers
    </div>
  </div>

  <div data-dashboard-target="student">
    <%= render "shared/bookings_student" %>
  </div>

  <div data-dashboard-target="teacher" class="d-none">


    <% if current_user.skills.count > 0 %>

      <div data-controller="insert-in-list">
        <%= render "shared/bookings_teacher" %>
      </div>

    <%end%>
  </div>
</div>
