<h2>Espace de <%= current_user.first_name %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="mx-3" style="width: 50%">
      <%= f.input :email, required: true, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
      <div class="w-40 mx-3">
        <%= f.input :address,
                    required: false,
                    input_html: { autocomplete: current_user.address } %>
      </div>
      <div class="w-40 mx-3">
        <%= f.input :bio,
                    required: false,
                    input_html: { autocomplete: current_user.bio } %>
      </div>
      <div class="d-flex">
        <div class="w-40 mx-3">
          <%= f.input :password,
                      hint: "Laisser vide si vous ne souhaitez pas changer de mdp",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="w-40 mx-3">
          <%= f.input :password_confirmation,
                      hint: "Laisser vide si vous ne souhaitez pas changer de mdp",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div>
          <%= f.input :current_password,
                      hint: "Entrez votre mdp actuel pour confirmer le changement",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>
      </div>
    </div>

    <div class="form-actions btn btn-primary w-100 rounded-5 my-3" >
      <%= f.button :submit, "Update" %>
    </div>

<% end %>

<h3>Supprimer mon compte</h3>

<div>
  <div>
    Vous ne trouvez pas ce que vous cherchez ?
  </div>
  <div class="btn btn-secondary w-20 rounded-5 my-3 text-decoration-none">
    <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
  </div>
</div>

</div>
